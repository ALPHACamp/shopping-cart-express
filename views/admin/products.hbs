<h1>管理員顯示所有商品</h1>

<a href="/admin/products">所有商品</a>
<a href="/admin/orders">所有訂單</a>
<a href="/admin/products/create">新增商品</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tbody>
    {{#each products.rows}}
    <tr>
      <td>{{this.id}}</td>
      <td>
        <img class="bd-placeholder-img card-img-top" style="width: 30px;height: 30px;" src={{this.image}}></img>
        {{this.name}}
      </td>
      <td>$ {{this.price}}</td>
      <td>
        <a href="/admin/products/{{this.id}}/edit">edit</a>
        <form action="/admin/products/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-link">
              <i class="fas fa-trash"></i>
            </button>
          </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/admin/products?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}} 
        {{#ifCond this ../page}}
        <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
        {{else}}
        <li class="page-item"><a class="page-link" href="/admin/products?page={{this}}">{{this}}</a></li>
        {{/ifCond}}
    {{/each}}
    <li class="page-item">
      <a class="page-link" href="/admin/products?page={{next}}" aria-label="Previous">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>