<h1>管理員管理訂單</h1>

<a href="/admin/products">所有商品</a>
<a href="/admin/orders">所有訂單</a>
<a href="/admin/products/create">新增商品</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Order Number</th>
      <th scope="col">Price</th>
      <th scope="col">Payment Status</th>
      <th scope="col">Shpping Status</th>
      <th scope="col">Detail</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders.rows}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.sn}}</td>
      <td>{{this.amount}}</td>
      <td>{{this.shipping_status}}</td>
      <td>{{this.payment_status}}</td>
      <td>
        <a href="/admin/orders/{{this.id}}">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/admin/products?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}} 
        {{#ifCond this ../page}}
        <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
        {{else}}
        <li class="page-item"><a class="page-link" href="/admin/products?page={{this}}">{{this}}</a></li>
        {{/ifCond}}
    {{/each}}
    <li class="page-item">
      <a class="page-link" href="/admin/products?page={{next}}" aria-label="Previous">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>